package objectarray.books;

public class BookTest {

	public static void main(String[] args) {
		Book[] lib = new Book[3];
		
		/*for(int i=0; i<lib.length; i++) {
			System.out.println(lib[1]);
		}*/
		
		//객체 생성(배열에 저장)
		lib[0] = new Book("자바 프로그래밍 입문", "김지은");
		lib[1] = new Book("웹 표준의 정석", "이지은");
		lib[2] = new Book("스프링 부트", "박지은");
		
		//출력
		lib[0].showBookInfo();
		
		//전체 출력
		for(int i=0; i<lib.length; i++) {
			lib[i].showBookInfo(); 			//sysout 금지..
		}
		
	}

}
