		// 메뉴 화면 만들기
		Scanner scan = new Scanner(System.in);
		
		int balance = 0;				//잔고
		
		while(true) {
		System.out.println("============================");
		System.out.println("1.예금 | 2.출금 | 3.잔고 | 4.종료");
		System.out.println("============================");
		
			int selNum = scan.nextInt();	// 메뉴 번호 입력
		
			switch(selNum) {
			case 4:
				break;
			}
			System.out.println("프로그램 종료");
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		

	}//main

}//class
