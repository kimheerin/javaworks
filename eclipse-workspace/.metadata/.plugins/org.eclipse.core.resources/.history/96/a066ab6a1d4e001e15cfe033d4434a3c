package score;

import java.util.Scanner;

public class CalcScoreTest {

	public static void main(String[] args) {
		// 성적 처리 프로그램
		Scanner sc = new Scanner(System.in);
		boolean sw = true; //상태 변수
		int studentCount = 0; //학생 수
		int[] scores = null;
		
		while(sw) {
		System.out.println("=====================================================");
		System.out.println("1. 학생 수 | 2. 필수 입력 | 3. 점수 리스트 | 4. 분석 | 5. 종료");
		System.out.println("=====================================================");
		
		//문자를 숫자로 변환(String, Integer(객체로 써야 할 때) -> int)
		int menu = Integer.parseInt(sc.nextLine());
		
		if(menu == 1) {
			System.out.print("학생 수 : ");
			studentCount = Integer.parseInt(sc.nextLine());
			scores = new int[studentCount]; //학생 수는 배열의 크기다.
		}else if(menu == 2) {
			for(int i=0; i < scores.length; i++) {
				System.out.println("scres[" + i + "] : ");
				scores[i]=Integer.parseInt(sc.nextLine());
			}
			
		}else if(menu == 3) {
			System.out.print("점수리스트 : ");
		}else if(menu == 4) {
			System.out.print("분석 : ");
		}else if(menu == 5) {
			sw = false;
		}
			
			
			
	
		}//while 끝
		System.out.println("프로그램 종료");
		sc.close();
	}//main

}
